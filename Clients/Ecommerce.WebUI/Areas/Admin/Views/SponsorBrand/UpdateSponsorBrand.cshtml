@model UpdateSponsorBrandDto
@{
    ViewData["Title"] = "Update Sponsor Brand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="space-y-6">
    <div class="page-header">
        <h1 class="page-title">Update Sponsor Brand</h1>
        <a href="/Admin/SponsorBrand/Index" class="btn-modern btn-secondary">
            <i class="fa-solid fa-arrow-left"></i>
            Back to List
        </a>
    </div>

    <div class="card p-6" style="max-width: 800px;">
        <form method="post" class="space-y-6">
            <input type="hidden" asp-for="SponsorBrandId" />
            
            <div class="form-group">
                <label class="form-label">Brand Name</label>
                <input type="text" class="form-input" asp-for="BrandName" placeholder="Enter brand name" />
            </div>

            <div class="form-group">
                <label class="form-label">Image URL</label>
                <input type="text" class="form-input" asp-for="ImageUrl" placeholder="Enter image URL" />
            </div>

            <div class="flex gap-3 pt-4">
                <button type="submit" class="btn-modern btn-primary">
                    <i class="fa-solid fa-save"></i>
                    Update Vendor
                </button>
                <a href="/Admin/SponsorBrand/Index" class="btn-modern btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
