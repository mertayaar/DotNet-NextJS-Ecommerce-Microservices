@model List<ResultSponsorBrandDto>
@{
    ViewData["Title"] = "Vendors";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="space-y-6">
    
    <div class="flex items-center justify-between">
        <h2 class="text-3xl font-bold tracking-tight text-foreground">Vendors</h2>
        <a href="/Admin/SponsorBrand/CreateSponsorBrand/" class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90">
            <i class="fa-solid fa-plus mr-2"></i> Add Vendor
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th style="width: 120px;">Image</th>
                        <th>Vendor Name</th>
                        <th style="width: 120px;" class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="table-img" alt="@item.BrandName" />
                                }
                                else
                                {
                                    <div class="w-10 h-10 bg-secondary rounded-md flex items-center justify-center text-muted-foreground">
                                        <i class="fa-regular fa-image"></i>
                                    </div>
                                }
                            </td>
                            <td class="font-medium">@item.BrandName</td>
                            <td class="text-right">
                                <div class="flex justify-end gap-1">
                                    <a href="/Admin/SponsorBrand/UpdateSponsorBrand/@item.SponsorBrandId" class="btn-modern btn-ghost btn-icon" title="Edit">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/Admin/SponsorBrand/DeleteSponsorBrand/@item.SponsorBrandId" 
                                       class="btn-modern btn-ghost btn-icon text-destructive hover:text-destructive" 
                                       title="Delete"
                                       onclick="return confirm('Are you sure you want to delete this Sponsor Brand?');">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="flex flex-col items-center justify-center rounded-lg border border-dashed p-16 text-center animate-in fade-in-50">
            <div class="flex h-20 w-20 items-center justify-center rounded-full bg-secondary mb-4">
                <i class="fa-solid fa-building text-3xl text-muted-foreground"></i>
            </div>
            <h3 class="text-lg font-semibold">No Vendors Found</h3>
            <p class="text-sm text-muted-foreground mt-2 mb-6">You haven't added any sponsor brands yet.</p>
            <a href="/Admin/SponsorBrand/CreateSponsorBrand/" class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow hover:bg-primary/90">
                <i class="fa-solid fa-plus mr-2"></i> Add First Vendor
            </a>
        </div>
    }
</div>


