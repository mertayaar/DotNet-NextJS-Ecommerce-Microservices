
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
   
@await Component.InvokeAsync("_AdminLayoutHeadComponentPartial")

<body class="font-sans antialiased bg-background text-foreground h-screen flex flex-col overflow-hidden">
    
    
    @await Component.InvokeAsync("_AdminLayoutHeaderComponentPartial")

    <div class="flex flex-1 overflow-hidden relative">
        
        <aside class="absolute inset-y-0 left-0 z-40 transform -translate-x-full lg:translate-x-0 lg:static lg:block transition-transform duration-300 ease-in-out bg-secondary w-64 border-r border-border">
            @await Component.InvokeAsync("_AdminLayoutSidebarComponentPartial")
        </aside>

        
        <main class="flex-1 overflow-y-auto bg-background p-6">
            @RenderBody()
            
            
            <footer class="mt-12 py-6 border-t border-border text-center text-sm text-muted-foreground">
                <p>&copy; @DateTime.Now.Year Ecommerce Admin Panel. All rights reserved. <a href="https://github.com/mertayaar" target="_blank" class="text-primary hover:underline">Mert Ayar</a></p>
            </footer>
        </main>
        
        
        
    </div>

</body>


</html>