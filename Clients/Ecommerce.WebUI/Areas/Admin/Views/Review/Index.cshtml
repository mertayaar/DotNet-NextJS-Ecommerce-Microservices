@model List<ResultReviewDto>
@{
    ViewData["Title"] = "Reviews";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="space-y-6">
    <div class="page-header">
        <h1 class="page-title">Reviews</h1>
    </div>

    <div class="card">
        <table class="modern-table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Review</th>
                    <th>Date</th>
                    <th style="width: 100px;">Status</th>
                    <th style="width: 120px;" class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="font-medium">@item.NameSurname</td>
                        <td class="text-muted-foreground">
                            @(item.ReviewDetail?.Length > 60 ? item.ReviewDetail.Substring(0, 60) + "..." : item.ReviewDetail)
                        </td>
                        <td class="text-muted-foreground">@item.CreatedDate.ToShortDateString()</td>
                        <td>
                            @if (item.Status)
                            {
                                <span class="status-badge status-active">Active</span>
                            }
                            else
                            {
                                <span class="status-badge status-pending">Pending</span>
                            }
                        </td>
                        <td class="text-right">
                            <div class="flex justify-end gap-1">
                                <a href="/Admin/Review/UpdateReview/@item.UserReviewId" class="btn-modern btn-ghost btn-icon" title="Edit">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/Admin/Review/DeleteReview/@item.UserReviewId" 
                                   class="btn-modern btn-ghost btn-icon text-destructive hover:text-destructive" 
                                   title="Delete"
                                   onclick="return confirm('Are you sure you want to delete this review?');">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
