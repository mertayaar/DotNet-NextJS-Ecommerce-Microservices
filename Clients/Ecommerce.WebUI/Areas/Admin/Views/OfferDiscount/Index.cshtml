@model List<ResultOfferDiscountDto>
@{
    ViewData["Title"] = "Discounts";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="space-y-6">
    <div class="page-header">
        <h1 class="page-title">Discounts</h1>
        <a href="/Admin/OfferDiscount/CreateOfferDiscount/" class="btn-modern btn-primary">
            <i class="fa-solid fa-plus"></i>
            Add Discount
        </a>
    </div>

    <div class="card">
        <table class="modern-table">
            <thead>
                <tr>
                    <th style="width: 80px;">Image</th>
                    <th>Title</th>
                    <th>Subtitle</th>
                    <th>Button</th>
                    <th style="width: 120px;" class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.ImageUrl" alt="@item.Title" class="table-img" />
                        </td>
                        <td class="font-medium">@item.Title</td>
                        <td class="text-muted-foreground">@item.Subtitle</td>
                        <td class="text-muted-foreground">@item.ButtonTitle</td>
                        <td class="text-right">
                            <div class="flex justify-end gap-1">
                                <a href="/Admin/OfferDiscount/UpdateOfferDiscount/@item.OfferDiscountId" class="btn-modern btn-ghost btn-icon" title="Edit">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/Admin/OfferDiscount/DeleteOfferDiscount/@item.OfferDiscountId" 
                                   class="btn-modern btn-ghost btn-icon text-destructive hover:text-destructive" 
                                   title="Delete"
                                   onclick="return confirm('Are you sure you want to delete this discount?');">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>