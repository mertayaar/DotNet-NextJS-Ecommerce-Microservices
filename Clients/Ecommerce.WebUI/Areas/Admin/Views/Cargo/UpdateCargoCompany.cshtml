@model UpdateCargoCompanyDto
@{
    ViewData["Title"] = "Update Cargo Company";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="space-y-6">
    <div class="page-header">
        <h1 class="page-title">Update Shipping Company</h1>
        <a href="/Admin/Cargo/CargoCompanyList" class="btn-modern btn-secondary">
            <i class="fa-solid fa-arrow-left"></i>
            Back to List
        </a>
    </div>

    <div class="card p-6" style="max-width: 800px;">
        <form method="post" class="space-y-6">
            <input type="hidden" asp-for="cargoCompanyId" />
            
            <div class="form-group">
                <label class="form-label">Company Name</label>
                <input type="text" class="form-input" asp-for="cargoCompanyName" placeholder="Enter company name" />
            </div>

            <div class="flex gap-3 pt-4">
                <button type="submit" class="btn-modern btn-primary">
                    <i class="fa-solid fa-save"></i>
                    Update Shipping
                </button>
                <a href="/Admin/Cargo/CargoCompanyList" class="btn-modern btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
