@model List<ResultCargoCompanyDto>
@{
    ViewData["Title"] = "Shipping";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="space-y-6">
    <div class="page-header">
        <h1 class="page-title">Shipping Companies</h1>
        <a href="/Admin/Cargo/CreateCargoCompany/" class="btn-modern btn-primary">
            <i class="fa-solid fa-plus"></i>
            Add Company
        </a>
    </div>

    <div class="card">
        <table class="modern-table">
            <thead>
                <tr>
                    <th style="width: 60px;">#</th>
                    <th>Company Name</th>
                    <th style="width: 120px;" class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{ int count = 0; }
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td class="text-muted-foreground">@count</td>
                        <td class="font-medium">@item.cargoCompanyName</td>
                        <td class="text-right">
                            <div class="flex justify-end gap-1">
                                <a href="/Admin/Cargo/UpdateCargoCompany/@item.cargoCompanyId" class="btn-modern btn-ghost btn-icon" title="Edit">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/Admin/Cargo/DeleteCargoCompany/@item.cargoCompanyId" 
                                   class="btn-modern btn-ghost btn-icon text-destructive hover:text-destructive" 
                                   title="Delete"
                                   onclick="return confirm('Are you sure you want to delete this company?');">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
