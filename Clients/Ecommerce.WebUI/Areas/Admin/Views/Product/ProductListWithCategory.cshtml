@model List<ResultProductsWithCategoryDto>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="space-y-6">
    <div class="page-header">
        <h1 class="page-title">Products</h1>
        <a href="/Admin/Product/CreateProduct/" class="btn-modern btn-primary">
            <i class="fa-solid fa-plus"></i>
            Add Product
        </a>
    </div>

    <div class="card">
        <table class="modern-table">
            <thead>
                <tr>
                    <th style="width: 80px;">Image</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th style="width: 120px;" class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.ProductImageUrl" alt="@item.ProductName" class="table-img" />
                        </td>
                        <td class="font-medium">@item.ProductName</td>
                        <td class="text-muted-foreground">@item.Category?.CategoryName</td>
                        <td class="font-medium">$@item.ProductPrice</td>
                        <td class="text-right">
                            <div class="flex justify-end gap-1">
                                <a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn-modern btn-ghost btn-icon" title="Edit">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/Admin/Product/DeleteProduct/@item.ProductId" 
                                   class="btn-modern btn-ghost btn-icon text-destructive hover:text-destructive" 
                                   title="Delete"
                                   onclick="return confirm('Are you sure you want to delete this product?');">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
