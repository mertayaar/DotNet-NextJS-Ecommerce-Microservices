@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="space-y-6">
    <div class="page-header">
        <h1 class="page-title">Categories</h1>
        <a href="/Admin/Category/CreateCategory/" class="btn-modern btn-primary">
            <i class="fa-solid fa-plus"></i>
            Add Category
        </a>
    </div>

    <div class="card">
        <table class="modern-table">
            <thead>
                <tr>

                    <th>Category Name</th>
                    <th style="width: 120px;" class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="font-medium">@item.CategoryName</td>
                        <td class="text-right">
                            <div class="flex justify-end gap-1">
                                <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn-modern btn-ghost btn-icon" title="Edit">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/Admin/Category/DeleteCategory/@item.CategoryId" 
                                   class="btn-modern btn-ghost btn-icon text-destructive hover:text-destructive" 
                                   title="Delete"
                                   onclick="return confirm('Are you sure you want to delete this category?');">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
